// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique

  @@map("user")
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String
  date        DateTime
  inDiet      Boolean  @map("in_diet")

  @@map("meal")
}
